---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    <div class="clearfix">{{ content }}</div>

    <!-- Work Experiences -->
    <div class="work-experiences">
      {% for work in site.data.work_experiences %}
        <div class="work-item mb-5">
          <div class="row align-items-center">
            <!-- Logo/Image Column -->
            <div class="col-md-3 col-sm-4">
              <div class="work-logo text-center d-flex align-items-center justify-content-center" style="min-height: 120px;">
                {% if work.logo %}
                  {% assign logo_path = work.logo | prepend: 'assets/img/' %}
                  <img src="{{ logo_path | relative_url }}" alt="{{ work.name }} logo" class="img-fluid rounded" style="max-height: 100px; max-width: 100%; object-fit: contain;">
                {% else %}
                  <div class="placeholder-logo bg-light rounded d-flex align-items-center justify-content-center" style="height: 100px;">
                    <span class="text-muted">{{ work.name | truncate: 10 }}</span>
                  </div>
                {% endif %}
              </div>
            </div>

            <!-- Content Column -->
            <div class="col-md-9 col-sm-8">
              <div class="work-content">
                <!-- Header -->
                <div class="work-header mb-2">
                  <h3 class="work-position mb-1">
                    {{ work.position }} @ {{ work.name }}
                  </h3>
                  
                  <div class="work-meta text-muted mb-2">
                    <span class="work-period">
                      <i class="fa-solid fa-calendar-alt"></i> {{ work.period }}
                    </span>
                    {% if work.location %}
                      <span class="work-location ml-3">
                        <i class="fa-solid fa-map-marker-alt"></i> {{ work.location }}
                      </span>
                    {% endif %}
                  </div>
                </div>

                <!-- Collaborators -->
                {% if work.collaborators and work.collaborators.size > 0 %}
                  <div class="work-collaborators {% if work.lab_page %}mb-1{% else %}mb-3{% endif %}">
                    <strong>Advisors:</strong>
                    {% for collaborator in work.collaborators %}
                      {% if collaborator.url and collaborator.url != "#" %}
                        <a href="{{ collaborator.url }}" target="_blank" rel="noopener noreferrer">{{ collaborator.name }}</a>
                      {% else %}
                        {{ collaborator.name }}
                      {% endif %}
                      {% unless forloop.last %}
                        {% if forloop.rindex == 2 %} and {% else %}, {% endif %}
                      {% endunless %}
                    {% endfor %}
                  </div>
                {% endif %}

                <!-- Lab Page -->
                {% if work.lab_page %}
                  <div class="work-lab-page mb-3">
                    <strong>Lab Page:</strong>
                    <a href="{{ work.lab_page }}" target="_blank" rel="noopener noreferrer">
                      {{ work.lab_page | remove: 'https://' | remove: 'www.' | remove: 'http://' | split: '/' | first }}
                      <i class="fa-solid fa-external-link-alt"></i> 
                    </a>
                  </div>
                {% endif %}

                <!-- Description -->
                <div class="work-description">
                  <p>{{ work.description }}</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Separator line (except for last item) -->
          {% unless forloop.last %}
            <hr class="work-separator mt-4">
          {% endunless %}
        </div>
      {% endfor %}
    </div>
  </article>
</div>

<style>
.work-experiences {
  margin-top: 2rem;
}

.work-item {
  padding: 1.5rem 0;
}

.work-logo {
  display: flex;
  align-items: center;
  justify-content: center;
}

.work-logo img {
  transition: transform 0.3s ease;
  max-height: 100px;
  max-width: 100%;
  object-fit: contain;
}

.work-position {
  font-size: 1.4rem;
  font-weight: 600;
  color: var(--global-text-color);
}

.work-position a {
  color: inherit;
  transition: color 0.3s ease;
}

.work-position a:hover {
  color: var(--global-theme-color);
}

.work-meta {
  font-size: 0.9rem;
}

.work-meta i {
  margin-right: 0.25rem;
  width: 1rem;
}

.work-collaborators,
.work-lab-page {
  font-size: 0.95rem;
}

.work-collaborators a,
.work-lab-page a {
  color: var(--global-theme-color);
  text-decoration: none;
}

.work-collaborators a:hover,
.work-lab-page a:hover {
  text-decoration: underline;
}

.work-description {
  font-size: 1rem;
  line-height: 1.6;
}

.work-separator {
  border: 0;
  border-top: 1px solid #e9ecef;
  opacity: 0.5;
}

.placeholder-logo {
  font-size: 0.8rem;
  font-weight: 500;
}

@media (max-width: 768px) {
  .work-logo {
    margin-bottom: 1rem;
  }
  
  .work-position {
    font-size: 1.2rem;
  }
  
  .work-meta .work-location {
    display: block;
    margin-left: 0 !important;
    margin-top: 0.25rem;
  }
}
</style>
